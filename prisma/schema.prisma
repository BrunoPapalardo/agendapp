generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  telephone String
  password  String
  createdAt DateTime @default(now())
  Appointments Appointment[]
}

model Appointment {
  id        Int      @id @default(autoincrement())
  dateTime  DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String
  icon      String     // Emoji ou um código representando o ícone
  createdAt DateTime   @default(now())
  locations Store[] // Relacionamento 1:N com Locais
}

model Store {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  categoryId  Int
  createdAt   DateTime @default(now())

  category    Category @relation(fields: [categoryId], references: [id]) // Relacionamento com Category
}